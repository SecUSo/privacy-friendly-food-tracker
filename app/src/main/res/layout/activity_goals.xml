<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbarOverview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GoalsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbarOverview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:menu="@string/action_goals">

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:id="@+id/textGoals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_about_calculation"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/nowGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@+id/textGoals"/>

            <TextView
                android:id="@+id/text_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/text_goal"
                android:textAlignment="textStart"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/nowGoal"
                tools:ignore="MissingConstraints" />

            <RadioGroup
                android:id="@+id/inputGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/text_goal"
                tools:ignore="MissingConstraints">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/input_loseWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:checked="true"
                    android:text="@string/hint_lose_weight" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/input_stayForm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hint_stay_form" />
            </RadioGroup>

            <TextView
                android:id="@+id/text_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/text_sex"
                android:textAlignment="textStart"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/inputGoal"
                tools:ignore="MissingConstraints" />

            <RadioGroup
                android:id="@+id/inputSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/text_sex"
                tools:ignore="MissingConstraints">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/inputSexM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/hint_sex_m"

                    />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/inputSexF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/hint_sex_f" />
            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/inputSex">

                <EditText
                    android:id="@+id/input_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_age"
                    android:inputType="number"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/inputAge">

                <EditText
                    android:id="@+id/input_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_height"
                    android:inputType="number"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/inputHeight">

                <EditText
                    android:id="@+id/input_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_weight"
                    android:inputType="number"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/text_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/text_activity"
                android:textAlignment="textStart"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/inputWeight"
                tools:ignore="MissingConstraints" />

            <RadioGroup
                android:id="@+id/Activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_constraintTop_toBottomOf="@+id/text_activity"
                tools:ignore="MissingConstraints">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/input_sedentary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/hint_sedentary"

                    />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/input_slightly_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hint_slightly_active" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/input_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hint_active" />
            </RadioGroup>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/inputIsPregnant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/hint_pregnant"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/Activity">

            </android.support.v7.widget.AppCompatCheckBox>

            <RadioGroup
                android:id="@+id/input_monthsPregnant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@+id/inputIsPregnant"
                tools:ignore="MissingConstraints">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/input_pregnant3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hint_0_3"

                    />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/input_pregnant6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hint_3_6" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/input_pregnant9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/hint_6_9" />
            </RadioGroup>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/countCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/count_goals" />

</android.support.design.widget.CoordinatorLayout>